@model Expenses_Tracker.Models.Transaction

@{
    ViewData["PageTitle"] = Model.TransactionId == 0 ? "Create Transaction" : "Edit Transaction";
}

<div class="row">
    <div class="col-md-7">
        <div class="widgets p-5">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" value="@Model.TransactionId" name="TransactionId">
                <div class="mb-3">
                    <ejs-datepicker id="date" ejs-for="Date" floatLabelType="Always" placeholder="Pick the date" format="MMM-dd-yy"></ejs-datepicker>
                </div>
                <div class="mb-3">
                    <ejs-dropdownlist id="ddlCategory" ejs-for="CategoryId" allowFiltering="true" ignoreAccent="true" 
                    filterType="Contains" placeholder="Categories" popupHeight="200px" floatLabelType="Always" dataSource="@ViewBag.Categories">
                        <e-dropdownlist-fields text="TitleWithIcon" value="CategoryId"></e-dropdownlist-fields>
                    </ejs-dropdownlist>
                    <span asp-validation-for="CategoryId" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                    <ejs-numerictextbox id="amount"
                    placeholder="Amount" floatLabelType="Always" min="0" format="c0" value="10" ejs-for="Amount" Type="text"></ejs-numerictextbox>
                    <span asp-validation-for="Amount" class="text-danger fs-6"></span>
                </div>
                
                <div class="mb-3">
                    <ejs-textbox id="note" placeholder="Note" ejs-for="Note" floatLabelType="Always" multiline="true"></ejs-textbox>
                
                </div>
                <ejs-button type="submit" id="submit" cssClass="e-success" content="Submit"></ejs-button>
            </form>
        </div>
        
    </div>
    <div class="col-md-5">
        <div class="widgets h-100 d-flex justify-content-center align-items-center" style="background-color:#212b36">
            <i class="fa-solid fa-money-bill-transfer fa-2xl"></i>
        </div>
    </div>
</div>

